<div class="header">
    <h2>Mis Compras</h2>
    <a href="/users/current" class="btn">Volver al Perfil</a>
</div>

{{#if tickets.length}}
<div class="tickets-grid">
    {{#each tickets}}
    <div class="ticket-card">
        <div class="ticket-header">
            <h3>Ticket #{{this.code}}</h3>
            <span class="ticket-status {{this.status}}">{{this.status}}</span>
        </div>
        <div class="ticket-info">
            <p><strong>Fecha:</strong> {{formatDate this.purchase_datetime}}</p>
            <p><strong>Total:</strong> {{this.amountFormatted}}</p>
            <p><strong>Email:</strong> {{this.purchaser}}</p>
        </div>
        <div class="ticket-actions">
            <a href="/users/tickets/{{this._id}}" class="btn btn-primary">Ver Detalle</a>
        </div>
    </div>
    {{/each}}
</div>
{{else}}
<div class="empty-state">
    <h3>No tienes compras registradas</h3>
    <p>Cuando realices una compra, aparecerá aquí.</p>
    <a href="/products" class="btn btn-primary">Ver Productos</a>
</div>
{{/if}}

<style>
.tickets-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 20px;
    margin-top: 20px;
}

.ticket-card {
    background: #3a3a3a;
    border: 1px solid #444;
    border-radius: 10px;
    padding: 20px;
    transition: transform 0.3s, box-shadow 0.3s;
}

.ticket-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.3);
}

.ticket-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 15px;
    padding-bottom: 15px;
    border-bottom: 1px solid #555;
}

.ticket-header h3 {
    margin: 0;
    font-size: 1.2rem;
    color: white;
}

.ticket-status {
    padding: 5px 10px;
    border-radius: 5px;
    font-size: 0.85rem;
    font-weight: 600;
    text-transform: uppercase;
}

.ticket-status.completed {
    background: #28a745;
    color: white;
}

.ticket-status.pending {
    background: #ffc107;
    color: #333;
}

.ticket-info p {
    margin: 8px 0;
    color: #ddd;
}

.ticket-actions {
    margin-top: 15px;
    padding-top: 15px;
    border-top: 1px solid #555;
}

.ticket-actions .btn {
    width: 100%;
    text-align: center;
}
</style>
